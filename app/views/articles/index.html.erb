<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<p>sakujo ga dousa sinainode sibaraku henshu ni totte kaemasu</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <% if article.url.present? %>
      <tr class="success">
    <% else %>
      <tr>
    <% end %>
        <td><%= article.content %><%= link_to 'Show', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

